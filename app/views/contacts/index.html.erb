<html lang="en">
<head>
  <title>Doplhine</title>
  <style>
  .navbar{
     background-color: #0d47a1;
  }
  .nav{
    margin-right:20px;
  }
 .glyphicon-log-out{
    font-size: 15px;
    color:#fff !important;
  }
  </style>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="row">
    <div class="navbar-header">
      <%= image_tag("logo.jpeg", :size => "100x70")%>
    </div>
    <ul class="nav navbar-nav navbar-right">
       <li><%= link_to " Log Out", sessions_path("current"), method: "delete", class: "glyphicon glyphicon-log-out"%>
     </li>
    </ul>
  </div>
</nav>
<div class="col-xs-12 col-sm-offset-3 col-sm-6">
  <% flash.each do |type,message| %>
          <%= content_tag :div, class: "alert alert-#{type}alert-dismissible", role:"alert" do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="close"><span aria-hidden="true">&times;</span></button>
          <%= message %>
          <% end %>
 <% end %>
</div>

<div class="container">
  <div class="col-xs-12  col-sm-9">
    <div class="panel panel-default">
      <div class="panel-heading c-list">
        <span class="title" style="font-weight:bold;">Contacts</span>
        <ul class="pull-right">
          <%= link_to new_message_path, class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-pencil"></i>
          <%=link_to new_contact_path, class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-plus"></i>
          <%end%>
          <%end%>
        </ul>
        <table class="table">
          
      <% @contacts.each do |contact| %>
          <tr>
            <td class="middle">
              <div class="media">
            </td>
               <td class="middle">
                 <div class="media-body">
                      <h4 class="media-heading"><%= contact.name%></h4>
                        <address>
                            <strong><%=contact.company%></strong><br>
                              <%= contact.email %></br>
                              <%= contact.phone %></br> 
                        </address>
                  </div>
               </td>
            <td width="100" class="middle">
              <div>
                <%= link_to edit_contact_path(contact), class: "btn btn-circle btn-default btn-xs", title: "Edit" do %>
                 <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                
                 <%= link_to contact_path(contact), :method => :delete, class: "btn btn-circle btn-danger btn-xs", title: "Delete ",data: {confirm: "Do you wish to delete?"} do %>
                 <i class="glyphicon glyphicon-remove"></i>
                <% end %>
              </div>
            </td>
          </tr>
          <%end%>
        </table>
      </div>
    </div>     
  </div>

   <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <a href="#" class="list-group-item active">All messages <span class="badge">20</span></a>
        <a href="#" class="list-group-item">Inbox <span class="badge">10</span></a>
        <a href="#" class="list-group-item">Outbox<span class="badge">5</span></a>
        <a href="#" class="list-group-item">Trash<span class="badge">5</span></a>
      </div>
    </div>
  </div>
</div>

</body>
</html> 
