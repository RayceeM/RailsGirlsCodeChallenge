<div class="container">
  <div class="col-xs-12 col-sm-offset-3 col-sm-8">
    <div class="panel panel-default">
     <div class="panel-heading">
       <strong>Add Contact</strong>
     </div>

     <%= form_for @contact do |f| %>
     <div class="panel-body">       
      <div class="row">
        <div class="col-md-8">
          <% if @contact.errors.any? %>
          <div class="alert alert-danger">
            <h3>Fields cannot be blank</h3>
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <%end%>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

        <div class="form-horinzontal">
          <div class="row">
              <div class="form-group">
                <%= f.label :Name, class: "control-label col-md-3" %>
                <div class="col-md-8">
                  <%= f.text_field :name, class: "form-control"%>
                </div>
             </div>

            <div class="form-group">
                <%= f.label :Company, class: "control-label col-md-3" %>
                <div class="col-md-8">
                <%= f.text_field :company, class: "form-control" %>
              </div>
            </div>

             <div class="form-group">
                <%= f.label :Email, class: "control-label col-md-3" %>
                <div class="col-md-8">
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>

              <div class="form-group">
                <%= f.label :Phone_number, class: "control-label col-md-3" %>
                <div class="col-md-8">
                <%= f.text_field :phone, class: "form-control" %>
              </div>
            </div>
              </div>
            </div>
          </div>
        </div>
     </div>
     <div class="panel-footer">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <%= f.submit "Save", class: "btn btn-success"%>
              <%= link_to "Cancel", contacts_path, class: "btn btn-warning" %>
            </div>
          </div>
        </div>
      </div>
     </div>
     
     <%end%>
    </div> 
  </div>    
</div>
